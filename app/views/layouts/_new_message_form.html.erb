<div class="form-group msg-form">
  <%= form_with(model: [@single_room ,@message], remote: true, class: "d-flex flex gap-2 items-center border-t pt-4 border-pink-200",
                data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }
      ) do |f| %>
    <%= f.text_field :content, id: 'chat-text', class: "form-control msg-content flex-1 p-3 rounded border border-pink-300 focus:outline-none focus:ring-2 focus:ring-pink-400", placeholder: "Type a message...", autocomplete: 'off' %>
    <%= f.submit data: { disable_with: false }, class: "bg-purple-600 text-white px-5 py-3 rounded hover:bg-purple-700 transition" %>
  <% end %>
</div>